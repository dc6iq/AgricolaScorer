<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geeksong.agricolascorer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CreateGameActivity"
            android:label="@string/title_activity_create_game" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPlayersActivity"
            android:label="@string/title_activity_add_players" >
        </activity>
        <activity
            android:name=".ScorePlayersActivity"
            android:label="@string/title_activity_score_players" >
        </activity>
        <activity
            android:name=".FinishedActivity"
            android:label="@string/title_activity_finished" >
        </activity>
    </application>

</manifest>