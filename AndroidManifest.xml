<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geeksong.agricolascorer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.geeksong.agricolascorer.AgricolaApplication"
        android:hardwareAccelerated="false"
        android:icon="@drawable/sheep"
        android:label="@string/app_name" >
        <activity
            android:name=".CreateGameActivity"
            android:label="@string/app_name"
            android:theme="@style/GreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPlayersActivity"
            android:label="@string/title_activity_add_players"
            android:theme="@style/GreenTheme" >
        </activity>
        <activity
            android:name=".ScorePlayersActivity"
            android:theme="@style/GreenTheme_NoActionBar" >
        </activity>
        <activity
            android:name=".FinishedActivity"
            android:theme="@style/GreenTheme_NoActionBar" >
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:theme="@style/GreenTheme_NoActionBar" >
        </activity>
        <activity
            android:name=".PlayerListActivity"
            android:theme="@style/GreenTheme_NoActionBar" >
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:theme="@style/GreenTheme" >
        </activity>
        <activity
            android:name=".FilterStatisticsActivity"
            android:label="@string/title_activity_filter_statistics"
            android:theme="@style/GreenTheme" >
        </activity>
    </application>

</manifest>